{
  "name": "interlis-lsp-client",
  "displayName": "INTERLIS LSP Client",
  "publisher": "edigonzales",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "onLanguage:interlis"
  ],
  "contributes": {
    "languages": [
      {
        "id": "interlis",
        "aliases": [
          "INTERLIS",
          "interlis"
        ],
        "extensions": [
          ".ili"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "interlis",
        "scopeName": "source.interlis",
        "path": "./syntaxes/interlis.tmLanguage.json",
        "embeddedLanguages": {}
      }
    ],
    "commands": [
      {
        "command": "interlis.compile.run",
        "title": "INTERLIS: Compile current file"
      },
      {
        "command": "interlis.uml.show",
        "title": "INTERLIS: Show UML class diagram"
      }
    ],
    "configuration": {
      "title": "INTERLIS LSP",
      "properties": {
        "interlisLsp.server.jarPath": {
          "type": "string",
          "default": "/Users/stefan/sources/interlis-lsp/build/libs/interlis-lsp-0.0.LOCALBUILD-all.jar",
          "description": "Path to the INTERLIS LSP fat JAR"
        },
        "interlisLsp.javaPath": {
          "type": "string",
          "default": "java",
          "description": "Java executable to run the server"
        },
        "interlisLsp.modelRepositories": {
          "type": "string",
          "default": "%ILI_DIR;https://models.interlis.ch;%JAR_DIR",
          "markdownDescription": "Preferred INTERLIS model repositories as a comma-separated string."
        },
        "interlisLsp.autoShowOutputOnStart": {
          "type": "boolean",
          "default": true,
          "description": "Show the INTERLIS LSP output channel when the extension activates."
        }
      }
    },
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "source.interlis comment.line.meta-attribute.interlis",
            "settings": { "foreground": "#d19a66", "fontStyle": "" }
          }
        ]
      }
    }
  },
  "main": "./dist/extension.js",
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --platform=node --external:vscode --external:vscode-languageclient --external:vscode-languageclient/node --outfile=dist/extension.js",
    "watch": "esbuild src/extension.ts --bundle --platform=node --external:vscode --external:vscode-languageclient --external:vscode-languageclient/node --outfile=dist/extension.js --watch"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/vscode": "^1.104.0",
    "esbuild": "^0.25.10",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
